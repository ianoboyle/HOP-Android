<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hopcontracting.ian.hopworkorder">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.hopcontracting.ian.hopworkorder.LoginActivity"
            android:label="@string/app_name" />
        <activity android:name="com.hopcontracting.ian.hopworkorder.ListActivity" />
        <activity android:name="com.hopcontracting.ian.hopworkorder.OrderDetail" />
        <activity android:name="com.hopcontracting.ian.hopworkorder.CustomerFeedbackActivity" />
        <activity
            android:name="com.hopcontracting.ian.hopworkorder.UserSelector"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hopcontracting.ian.hopworkorder.CustomerRequestForm"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>