<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.ian.hopworkorder.OrderDetail"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <!-- Submit progress -->
    <ProgressBar
        android:id="@+id/submit_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <Button
        android:background="#FFFF"
        android:id="@+id/complete_order_button"
        android:layout_width="191dp"
        android:layout_height="46dp"
        android:text="@string/submit_report"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_bias="0.502" />

    <TextView
        android:id="@+id/address_text_view"
        android:textColor="#FFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />


    <Spinner
        android:background="#FFFF"
        android:id="@+id/work_type_spinner"
        android:layout_width="341dp"
        android:layout_height="28dp"
        android:tooltipText="@string/workTypesText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintHorizontal_bias="0.511"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_input" />


    <EditText
        android:hint="@string/report_hint"
        android:background="#FFFF"
        android:id="@+id/edit_text_input"
        android:gravity="top|start"
        android:singleLine="false"
        android:layout_width="357dp"
        android:layout_height="109dp"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintHorizontal_bias="0.518"
        android:layout_marginBottom="354dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/address_text_view"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/alert_dark_frame"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageButton3"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="57dp"
        app:layout_constraintTop_toBottomOf="@+id/work_types_list_view"
        app:layout_constraintHorizontal_bias="0.941"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/complete_order_button"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/alert_dark_frame"
        app:layout_constraintLeft_toRightOf="@+id/imageButton4"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/work_types_list_view"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/complete_order_button"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/alert_dark_frame"
        app:layout_constraintLeft_toRightOf="@+id/imageButton2"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/work_types_list_view"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/complete_order_button"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/alert_dark_frame"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/work_types_list_view"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/complete_order_button"
        app:layout_constraintVertical_bias="1.0" />

    <ListView
        android:id="@+id/work_types_list_view"
        android:layout_width="0dp"
        android:layout_height="99dp"
        android:layout_marginEnd="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/work_type_spinner"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

</android.support.constraint.ConstraintLayout>
